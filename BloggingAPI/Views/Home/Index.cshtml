            }
            };
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>List all the blogs</h2>
        <p style="white-space: pre-wrap;">
            var settings = {
            "url": "https://localhost:44362/api/Blogs",
            "method": "GET",
            "headers": {
            "Authorization": "Bearer YOUR TOKEN HERE"
            },
            };
        </p>
    </div>
    <div class="col-md-4">
        <h2>Add new blog</h2>
        <p style="white-space: pre-wrap;">
            var settings = {
            "url": "https://localhost:44362/api/Blogs",
            "method": "POST",
            "headers": {
            "Authorization": "Bearer YOUR TOKEN HERE",
            "Content-Type": "application/json"
            },
            "data": JSON.stringify({
            "Title": "New Blog",
            "Body": "Blog Body",
            "Location": "Noida"
            }),
            };
        </p>
    </div>
    <div class="col-md-4">
        <h2>Edit a blog</h2>
        <p style="white-space: pre-wrap;">
            var settings = {
            "url": "https://localhost:44362/api/Blogs/1",
            "method": "PUT",
            "headers": {
            "Authorization": "Bearer YOUR TOKEN HERE",
            "Content-Type": "application/json"
            },
            "data": JSON.stringify({
            "Title": "New Post1",
            "Body": "Post Body1",
            "Location": "Noida"
            }),
            };
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
